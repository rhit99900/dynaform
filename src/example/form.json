{
  "title": "DynaForm.js Example",
  "type": "object",
  "element": "form",
  "properties": {
    "basic_details": {
      "title": "Basic Details",
      "type": "object",      
      "element": "section",
      "properties": {
        "name": {
          "type": "string",
          "label": "Name",
          "element": "input",
          "path": "name"   
        },
        "description": {
          "type": "string",
          "label": "Description",
          "element": "textarea",
          "path": "description"
        }
      }
    },
    "address": {
      "title": "Address",
      "type": "object",
      "element": "section",
      "properties": {
        "address": {
          "type": "object",
          "label": "Address",
          "element": "row",
          "properties": {
            "street": {
              "type": "string",
              "label": "Street",
              "element": "input",
              "path": "address.street"
            }
          }
        }
      }
    } 
  } 
}