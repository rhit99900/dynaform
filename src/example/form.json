{
  "title": "DynaForm.js Example",
  "type": "object",
  "element": "form",
  "properties": {
    "basic_details": {
      "title": "Basic Details",
      "type": "object",      
      "element": "section",
      "properties": {
        "name": {
          "type": "string",
          "label": "Name",
          "element": "input",
          "path": "name"   
        },
        "description": {
          "type": "string",
          "label": "Description",
          "element": "textarea",
          "path": "description"
        },
        "email": {
          "type": "string",
          "label": "Email",
          "placeholder": "Please Enter your Email ID",
          "path": "email",
          "element": "input",
          "validations": {
            "required": "true",
            "format": "email"
          }
        },
        "profile_picture": {
          "type": "string",
          "label": "Profile Image",          
          "path": "image",
          "element": "upload",
          "validations": {
            "required": "true"            
          }
        }
      }
    },
    "address": {
      "title": "Address",
      "type": "object",
      "element": "section",
      "properties": {
        "address": {
          "type": "object",
          "label": "Address",
          "element": "row",
          "properties": {
            "street": {
              "type": "string",
              "label": "Street",
              "element": "input",
              "path": "address.street"
            },
            "locality": {
              "type": "string",
              "label": "Locality",
              "element": "input",
              "path": "address.locality"
            },
            "region": {
              "type": "string",
              "label": "Region",
              "element": "input",
              "path": "address.region"
            },
            "area_code": {
              "type": "string",
              "label": "Zipcode/Pincode",
              "element": "input",
              "path": "address.area_code"
            }
          }
        }
      }
    } 
  } 
}